<%# data-action='submit->form-submit#method' %>
<%= simple_form_for(@monument,
                    data: {
                      action: 'submit->form-submit#send',
                      form_submit_target: 'form'
                    }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :opening_date, input_html: { data: { controller: 'datepicker'}}, as: :string %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
